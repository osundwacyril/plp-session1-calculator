def calculator():
    
    print("Welcome to the Simple Python Calculator!")

    # Get the first number from the user
    while True:
        try:
            num1_str = input("Enter the first number: ")
            num1 = float(num1_str) # Convert input to a floating-point number
            break # Exit loop if input is valid
        except ValueError:
            print(f"Invalid input: '{num1_str}'. Please enter a valid number.")

    # Get the second number from the user
    while True:
        try:
            num2_str = input("Enter the second number: ")
            num2 = float(num2_str) # Convert input to a floating-point number
            break # Exit loop if input is valid
        except ValueError:
            print(f"Invalid input: '{num2_str}'. Please enter a valid number.")

    # Get the desired operation from the user
    while True:
        operation = input("Enter the operation (+, -, *, /): ")
        if operation in ['+', '-', '*', '/']:
            break # Exit loop if operation is valid
        else:
            print(f"Invalid operation: '{operation}'. Please choose from +, -, *, or /.")

    result = None
    expression = f"{num1} {operation} {num2}"

    # Perform the chosen operation
    if operation == '+':
        result = num1 + num2
    elif operation == '-':
        result = num1 - num2
    elif operation == '*':
        result = num1 * num2
    elif operation == '/':
        if num2 == 0:
            print("Error: Division by zero is not allowed.")
            return # Exit the function if division by zero occurs
        else:
            result = num1 / num2
    
    # Print the result in the specified format
    if result is not None:
        # Format the result to avoid excessive decimal places for whole numbers
        if result == int(result):
            print(f"{expression} = {int(result)}")
        else:
            print(f"{expression} = {result}")

# Call the calculator function to run the program
if __name__ == "__main__":
    calculator()
